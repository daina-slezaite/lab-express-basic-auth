<div id="signup-login">
  <h2>Login</h2>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}

  <form action="/login" method="POST">
    <label>
        Username
        <input type="text" name="username" placeholder="Your username" />
    </label>
 
    <label>
        Password
        <input type="password" name="password" placeholder="********" />
    </label>
 
    <button type="submit">Login</button>
 
  </form>
</div>
